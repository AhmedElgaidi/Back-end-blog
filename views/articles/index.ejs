<%- include('../partials/header.ejs') %> 
<%- include('../partials/navbar.ejs') %>

<div class="container mt-3"style="max-width: 80%">
    <strong class="has-text-primary">
        All Articles:
    </strong>

    <% if (articles.length > 0) { %>
        <div class="columns mt-6 mb-6">
            <% articles.forEach(el => { %> 
                <div class="column ">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header-title is-centered has-text-primary">
                                <%= el.title %>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="content has-text-centered has-text-grey">
                                <%= el.description %> 
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="card-footer-item has-text-primary" href="/articles/<%= el.slug %> ">Read more</a>
                        </div>
                    </div> 
                </div>   
            <% }) %> 
        </div>
    <% } else { %>
        <h2 class="has-text-centered mt-6 mb-3">
            <strong class="has-text-danger">
                You don't have blogs yet 
                <br>
                <small>:(</small>
            </strong>
        </h2>
        <div class="has-text-centered mb-6">
            <a class="has-text-primary" href="/articles/create">New Article</a>
        </div>
    <% } %> 
    </div>
</div>

<%- include('../partials/footer.ejs') %> 