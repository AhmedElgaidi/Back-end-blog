    <div class="container" style="max-width: 45%;">
        <form action="/articles/create" method="POST">
            <label class="title is-size-6" style="color: hsl(171, 100%, 41%)" for="title">Article title:</label><br>
            <input class="input is-rounded is-outlined mt-3 mb-3"type="text" name="title" id="title" required><br>
