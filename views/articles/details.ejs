<%- include('../partials/header.ejs') %> 
<%- include('../partials/navbar.ejs') %> 

<div class="container"style="max-width: 70%">
    <div class="columns is-mobile">
        <div class="column">
            <h1 class="has-text-centered">
                <strong class="has-text-primary">
                    <%= article.title %>
                </strong> 
            </h2>
        </div>
        <div class="column is-narrow">
            <div class="columns">
                <form class="column"method="POST"action="/articles/<%= article.id %>?_method=DELETE">
                    <button type="submit"class="button is-rounded is-danger is-small">
                        Delete
                    </button>
                </form>
                <form class="column"method="get"action="/articles/edit/<%= article.id %>">
                    <button type="submit"class="button is-rounded is-primary is-small">
                        Edit
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="mt-3 mb-5">
        <div id='target'class="has-text-justified has-text-grey">
            <%- article.sanitizedHtml %> 
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %> 